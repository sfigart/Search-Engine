<div class="row">
  <div class="span12">
    <h1>Admin Debugging</h1>
    <h2>Showing debug for <%= @page.docid %></h2>
    <table class="table">
      <tr><td>Name</td><td><%= @page.name %></td></tr>
      <tr><td>url</td><td><%= link_to @page.url, @page.url, {:target => '_blank'} %></td></tr>
      <tr><td></td><td></td></tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="span12">
    <ul>
      <% @tokens.each do |token| %>
        <li><%= token %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="span6">
    <h2>Text</h2>
    <pre>
      <%= @text %>
    </pre>
  </div>
  <div class="span6">
    <h2>HTML</h2>
    <%= @page.html %>
  </div>

</div>
